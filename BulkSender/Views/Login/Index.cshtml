<!--#LOGIN_REQUIRED#-->
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>BulkSender - Giriş</title>

    <!-- Core CSS - Include with every page -->
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/css/font-awesome.css" rel="stylesheet">

    <!-- CSS - Include with every page -->
    <link href="/Content/css/aspstate.css" rel="stylesheet">
	<script type="text/javascript">
		var enabledSettingsMenu = false;
	</script>
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
				<div><h2 style="width:192px;margin-left:80px;margin-bottom:40px;height:44px;text-align:center;font-weight:bold;">BULKSENDER</h2></div>
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 id="Result" class="panel-title">Lütfen Oturum Açın</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" id="form1" action="/Login" method="post">
							<input type="hidden" id="ReturnUrl" />
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Kullanıcı Adı" name="Username" type="text" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Şifre" name="Password" type="password" value="">
									@Html.ValidationMessage("Username")
                                </div>
                                <div class="checkbox">
                                    <label>
										<!--
                                        <input name="IsRemember" type="checkbox" value="True">Beni Hatırla
											-->
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-lg btn-success btn-block">Giriş Yap</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Core Scripts - Include with every page -->
    <script src="/Content/js/jquery-1.10.2.js"></script>
    <script src="/Content/js/bootstrap.min.js"></script>
	<script src="/Content/js/jquery.validate.js"></script>
	<script src="/Content/js/jquery.validate.unobtrusive.js"></script>
    <script src="/Content/js/plugins/metisMenu/jquery.metisMenu.js"></script>

    <!-- ASPState Scripts - Include with every page -->
    <script src="/Content/js/common.js"></script>

	<script type="text/javascript">
		$(document).ready(function () {
			$("#Username").focus().click();
		});
	</script>

</body>

</html>
